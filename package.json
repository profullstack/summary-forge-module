    "dotenv": "^16.6.1",
    "elevenlabs": "^0.8.2",
    "https-proxy-agent": "^7.0.6",
    "inquirer": "^10.2.2",
    "node-fetch": "^3.3.2",
    "openai": "^6.8.1",
